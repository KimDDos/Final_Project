<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "https://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper
	namespace="com.four.www.reservation.repository.ReservationDAO">



	<insert id="register" parameterType="com.four.www.reservation.domain.ReservationVO">
		insert into reservation
		(User_serial_no,trainer_no,rv_regdate,rv_time,rv_pw,rv_content,rv_title,rv_address)
		values(#{userSerialNo},#{trainerNo},#{rvRegdate},#{rvTime},#{rvPw},#{rvContent},#{rvTitle},#{rvAddress})
	</insert>
	
	<select id="getReserve" parameterType="int" resultType="com.four.www.reservation.domain.ReservationVO">
	select * from reservation where User_serial_no =#{userNo}
	</select>
</mapper>